---
import Layout from "../layouts/Layout.astro";
import LoginView from "../components/LoginView.tsx";
import { ToastProvider } from "../components/ToastProvider.tsx";
---

<Layout title="Logowanie - FairPlay">
  <main class="min-h-screen bg-muted/40 flex items-center justify-center px-4 py-16">
    <div class="w-full max-w-md space-y-6">
      <section class="rounded-xl border border-border bg-background shadow-sm">
        <header class="px-6 pt-6 text-center space-y-2">
          <p class="text-xs font-medium uppercase tracking-wide text-primary/80">Platforma FairPlay</p>
          <h1 class="text-3xl font-semibold text-foreground">Zaloguj się</h1>
          <p class="text-sm text-muted-foreground">Uzyskaj dostęp do panelu zarządzania rozgrywkami i wydarzeniami.</p>
        </header>
        <div class="px-6 pb-6 pt-4">
          <LoginView client:only="react" />
        </div>
      </section>
      <p class="text-center text-xs text-muted-foreground">
        Masz problem z logowaniem? <a href="/forgot-password" class="font-medium text-primary hover:underline"
          >Zresetuj hasło</a
        >
        lub skontaktuj się z administratorem.
      </p>
    </div>
  </main>
  <ToastProvider client:load />
</Layout>
