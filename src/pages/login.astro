---
import Layout from "../layouts/Layout.astro";
import LoginView from "../components/LoginView.tsx";
import { ToastProvider } from "../components/ToastProvider.tsx";
---

<Layout title="Logowanie - FairPlay">
  <main class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
      <div>
        <h1 class="mt-6 text-center text-3xl font-extrabold text-gray-900">Zaloguj się do FairPlay</h1>
        <p class="mt-2 text-center text-sm text-gray-600">Dostęp do systemu zarządzania rozgrywkami piłkarskimi</p>
      </div>
      <LoginView client:load />
    </div>
  </main>
  <ToastProvider client:load />
</Layout>
